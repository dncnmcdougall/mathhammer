{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "plugins" :[
        "spellcheck"
    ],
    "rules": {
        "spellcheck/spell-checker":[1, {
            "comments": true,
            "strings": true,
            "identifiers": true,
            "lang": "en_GB",
            "minLength": 3,
            "skipWords": [
                "args",
                "ansi",
                "basename",
                "booleans",
                "bool",
                "const",
                "cwd",
                "dict",
                "dir",
                "dist",
                "eslint",
                "extname",
                "func",
                "int",
                "obj",
                "readdir",
                "stat",
                "src",
                "stdout",
                "str",
                "typeless",
                "util",
                "val",
                "writable"
            ],
            "skipIfMatch": [
                "http://[^s]*",
                "^[-\\w]+\/[-\\w\\.]+$"
            ]
        }],
        "no-console": [
            "warn"
        ],
        "no-unused-vars": [
            "error", 
            {
                "args": "none"
            }
        ],
        "no-fallthrough": [
            "error"
        ],
        "no-eval": [
            "error"
        ],
        "no-implied-eval": [
            "error"
        ],
        "no-invalid-this": [
            "error"
        ],
        "no-const-assign": [
            "error"
        ],
        "no-new": [
            "error"
        ],
        "no-prototype-builtins": [
            "off"
        ],
        "radix": [
            "error",
            "always"
        ],
        "indent": [
            "off",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "curly":[
            "error",
            "all"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "handle-callback-err": [
            "error",
            "error"
        ],
        "new-cap": [
            "error"
        ],
        "no-lonely-if": [
            "error"
        ],
        "arrow-body-style": [
            "error",
            "as-needed"
        ],
        "arrow-parens": [
            "error",
            "always"
        ],
        "arrow-spacing": [
            "error"
        ],
        "complexity": [
            "warn",
            10
        ],
        "no-throw-literal": [
            "error"
        ],
        "max-depth": [
            "error",
            4
        ],
        "max-nested-callbacks": [
            "error", 
            4
        ],
        "max-len": [
            "error",
            130
        ],
        "default-case": [
            "error"
        ]


    }
}
